<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="0dp"
    android:background="@color/blue_50">

    <!-- Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Image (No badge - user is not a friend yet) -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sender_profile_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/circle_logo"
            android:scaleType="centerCrop" />

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sender Name -->
            <TextView
                android:id="@+id/sender_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Friend Request Message -->
            <TextView
                android:id="@+id/friend_request_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="님이 친구 요청을 보냈습니다"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/notification_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2024.01.01 12:00"
                android:textColor="@color/gray_500"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- View Profile Button -->
        <ImageButton
            android:id="@+id/view_profile_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View profile"
            android:src="@drawable/ic_more_vertical"
            app:tint="@color/primary_blue"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Bottom Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_400" />

</LinearLayout>
