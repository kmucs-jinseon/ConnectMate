<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Fragment Container - must be first to be at back -->

    <!-- Bottom Navigation -->

    <!-- Map UI Overlay (shown when Map tab is active) -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp" >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            android:clipToPadding="false"
            android:contentDescription="@string/create_activity"
            android:padding="14dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/primary_blue"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:tint="@color/white" />
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/primary_blue"
        app:elevation="8dp"
        app:itemActiveIndicatorStyle="@style/BottomNavActiveIndicator"
        app:itemIconSize="26dp"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextAppearanceActive="@style/BottomNavTextActive"
        app:itemTextAppearanceInactive="@style/BottomNavTextInactive"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_anchor="@+id/main_container"
        app:layout_anchorGravity="bottom|center"
        app:menu="@menu/bottom_navbar" />

    <LinearLayout
        android:id="@+id/map_ui_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:elevation="16dp">

        <!-- Search Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/fab_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="367dp"
                android:layout_height="49dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:autofillHints="true"
                    android:background="@null"
                    android:hint="@string/search_activities_or_places"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/search_clear_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/close"
                    android:padding="8dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    app:tint="@color/gray_600" />

                <ImageButton
                    android:id="@+id/search_submit_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/search"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="@color/primary_blue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Current Location Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/current_location_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/fab_background"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_my_location"
                    app:tint="@color/primary_blue"
                    android:contentDescription="@string/current_location"/>

                <TextView
                    android:id="@+id/current_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/getting_location"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Search Results List -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_search_results_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="96dp"
            android:maxHeight="250dp"
            app:cardBackgroundColor="@color/fab_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="16dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_search_results_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </androidx.cardview.widget.CardView>

        <!-- Filter Chips (Horizontally Scrollable) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/all" />

                <!-- Active Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="활동적"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sports"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sports" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_outdoor"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야외활동" />

                <!-- Learning Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="학습"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_study"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/study" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_culture"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문화" />

                <!-- Social & Food Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="소셜/음식"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_social"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_food"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛집" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_travel"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행" />

                <!-- Entertainment Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="여가"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_game"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_hobby"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취미" />

                <!-- Community Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="커뮤니티"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_volunteer"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="봉사" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_other"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Activity UI Overlay (shown when Activity tab is active) -->
    <LinearLayout
        android:id="@+id/activity_ui_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/primary_blue">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activities"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Filter Chips (Horizontally Scrollable) -->
        <HorizontalScrollView
            android:id="@+id/activity_filter_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="?attr/colorSurface">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/activity_filter_chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:singleLine="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_all"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="전체" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_sports"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_outdoor"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야외활동" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_study"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스터디" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_culture"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문화" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_social"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소셜" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_food"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛집" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_travel"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_game"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_hobby"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취미" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_volunteer"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="봉사" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activity_chip_other"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />

    </LinearLayout>

    <!-- Map Controls (Right Side) -->
    <LinearLayout
        android:id="@+id/map_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/current_location"
            android:src="@drawable/ic_map_pin"
            app:backgroundTint="@color/fab_background"
            app:elevation="4dp"
            app:fabSize="normal"
            app:tint="@color/primary_blue" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/zoom_in"
            android:src="@drawable/ic_plus"
            app:backgroundTint="@color/fab_background"
            app:elevation="4dp"
            app:fabSize="mini"
            app:tint="@color/primary_blue" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:contentDescription="@string/zoom_out"
            android:src="@drawable/ic_minus"
            app:backgroundTint="@color/fab_background"
            app:elevation="4dp"
            app:fabSize="mini"
            app:tint="@color/primary_blue" />

    </LinearLayout>

    <!-- Floating Action Button for Create Activity -->

    <!-- Loading Indicator removed - MapFragment now has its own -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
