<?xml version="1.0" encoding="utf-8"?>
<!-- Location Item for RecyclerView -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/map_location"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <!-- Icon Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/icon_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/blue_500"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_map"
            app:tint="@color/blue_500"
            android:contentDescription="@string/location_icon"/>

    </androidx.cardview.widget.CardView>

    <!-- Location Info -->
    <LinearLayout
        android:id="@+id/location_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/icon_container"
        app:layout_constraintEnd_toStartOf="@id/distance_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/community_gym"
            android:textColor="@color/gray_900"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/location_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fitness"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <!-- Distance -->
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5 km"
        android:textColor="@color/gray_600"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>