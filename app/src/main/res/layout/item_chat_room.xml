<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <!-- Profile Image with Friend Badge -->
    <FrameLayout
        android:id="@+id/profile_image_container"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_logo"
            app:civ_border_color="@color/gray_200"
            app:civ_border_width="1dp"
            tools:src="@drawable/circle_logo" />

        <!-- Friend badge - small circle logo at bottom right -->
        <ImageView
            android:id="@+id/friend_badge"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/circle_logo"
            android:contentDescription="Friend indicator"
            android:visibility="gone"
            android:elevation="2dp" />

    </FrameLayout>


    <!-- Chat Room Name -->
    <TextView
        android:id="@+id/chat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/category_chip"
        app:layout_constraintStart_toEndOf="@id/profile_image_container"
        app:layout_constraintTop_toTopOf="@id/profile_image_container"
        tools:text="채팅방 이름" />

    <!-- Category Chip (Hidden, kept for filtering) -->
    <com.google.android.material.chip.Chip
        android:id="@+id/category_chip"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        app:chipBackgroundColor="@color/primary_blue"
        app:chipCornerRadius="50dp"
        app:chipMinHeight="40dp"
        app:chipStartPadding="8dp"
        app:chipEndPadding="8dp"
        app:textStartPadding="6dp"
        app:textEndPadding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/member_count"
        app:layout_constraintEnd_toStartOf="@id/member_count"
        app:layout_constraintStart_toEndOf="@id/chat_name"
        app:layout_constraintTop_toTopOf="@id/chat_name"
        tools:text="운동" />

    <!-- Member Count Badge -->

    <!-- Last Message -->

    <TextView
        android:id="@+id/member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_participant_count"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3dp"
        android:textColor="@color/participant_count_text"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/timestamp"
        app:layout_constraintTop_toTopOf="@id/chat_name"
        app:layout_constraintBottom_toBottomOf="@id/chat_name"
        tools:text="5명" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray_600"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_container"
        app:layout_constraintEnd_toStartOf="@id/unread_count"
        app:layout_constraintStart_toEndOf="@id/profile_image_container"
        app:layout_constraintTop_toBottomOf="@id/chat_name"
        tools:text="Hey, how are you doing today?" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_name"
        app:layout_constraintBottom_toBottomOf="@id/chat_name"
        tools:text="오후 2:30" />

    <!-- Unread Badge - Perfect Circle -->
    <TextView
        android:id="@+id/unread_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:background="@drawable/bg_unread_circle"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timestamp"
        tools:visibility="visible"
        tools:text="3" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_image_container"
        app:layout_constraintTop_toBottomOf="@id/profile_image_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
