<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="end">

    <!-- Message Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="48dp"
        android:gravity="end">

        <!-- Sender Name (You) -->
        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="4dp" />

        <!-- Message Bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_bubble_sent"
            android:layout_marginBottom="2dp">

            <FrameLayout
                android:id="@+id/image_frame"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/message_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_image_rounded_sent"
                    android:contentDescription="Message image"
                    android:clipToOutline="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/document_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@drawable/bg_document_container_sent"
                android:elevation="2dp"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/document_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:tint="@color/white"
                    android:contentDescription="Document icon" />

                <TextView
                    android:id="@+id/document_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="document.pdf"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:maxWidth="180dp"
                    android:ellipsize="middle"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message text goes here"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="2dp"
                android:padding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="4dp" />

    </LinearLayout>

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle_logo"
        android:layout_marginStart="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/primary_blue" />

</LinearLayout>
