<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kakao Map View -->
    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Emulator Warning -->
    <TextView
        android:id="@+id/emulator_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="@string/emulator_warning"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone" />


    <!-- POI Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/poi_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:visibility="gone"
        android:elevation="50dp"
        android:translationZ="50dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Close button -->
            <ImageButton
                android:id="@+id/btn_close_poi_info"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/close_poi_info"
                app:tint="@color/gray_600" />

            <!-- POI Name -->
            <TextView
                android:id="@+id/poi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/poi_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Category -->
            <TextView
                android:id="@+id/poi_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/poi_category"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_map_pin"
                    app:tint="@color/primary_blue"
                    android:contentDescription="@string/location_icon" />

                <TextView
                    android:id="@+id/poi_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/poi_address"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:id="@+id/poi_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/primary_blue"
                    android:contentDescription="@string/poi_phone" />

                <TextView
                    android:id="@+id/poi_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/poi_phone"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Distance -->
            <LinearLayout
                android:id="@+id/poi_distance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/primary_blue"
                    android:contentDescription="@string/poi_distance" />

                <TextView
                    android:id="@+id/poi_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/poi_distance"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Website URL (if available) -->
            <LinearLayout
                android:id="@+id/poi_website_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_link"
                    app:tint="@color/primary_blue"
                    android:contentDescription="@string/poi_website" />

                <TextView
                    android:id="@+id/poi_website"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/poi_website"
                    android:textSize="14sp"
                    android:textColor="@color/primary_blue"
                    android:autoLink="web" />

            </LinearLayout>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_use_poi_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/create_activity_at_this_place"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_blue"
                app:cornerRadius="8dp" />

            <!-- Existing Activities Header -->
            <TextView
                android:id="@+id/poi_activities_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/activities_at_this_place"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Existing Activities List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/poi_activities_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxHeight="120dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Use This Location Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_use_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="@string/use_this_location"
        android:textColor="@color/white"
        app:icon="@drawable/ic_plus"
        app:iconTint="@color/white"
        app:backgroundTint="@color/primary_blue"
        android:visibility="gone" />

</FrameLayout>
