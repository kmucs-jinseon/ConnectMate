<?xml version="1.0" encoding="utf-8"?>
<!-- Custom password toggle that shows correct icons:
     - Closed eye when password is hidden
     - Open eye when password is visible -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When password is visible (checked state) - show OPEN eye -->
    <item android:state_checked="true" android:drawable="@drawable/ic_visibility_on"/>
    <!-- When password is hidden (unchecked state) - show CLOSED eye -->
    <item android:drawable="@drawable/ic_visibility_off"/>
</selector>
