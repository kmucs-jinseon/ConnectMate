<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =============================== -->
    <!--        Application Theme        -->
    <!-- =============================== -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/mint_400</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:windowBackground">@color/background</item>

        <!-- Default Font Family -->
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="fontFamily">@font/pretendard</item>
    </style>

    <!-- =============================== -->
    <!--      TextInputLayout Style      -->
    <!-- =============================== -->
    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Box Colors -->
        <item name="boxBackgroundColor">@color/gray_50</item>
        <item name="boxStrokeColor">@color/primary_blue</item>

        <!-- Box Stroke Width -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- Hint Text -->
        <item name="hintTextColor">@color/gray_600</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="hintAnimationEnabled">true</item>

        <!-- Helper & Error Text -->
        <item name="helperTextTextColor">@color/gray_400</item>
        <item name="errorTextColor">@color/pink_400</item>

        <!-- Shape & Icons -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Corner.Medium</item>
        <item name="endIconTint">@color/primary_blue</item>
    </style>

    <!-- =============================== -->
    <!--      TextInputEditText Style    -->
    <!-- =============================== -->
    <style name="InputEditTextStyle">
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- =============================== -->
    <!--        Primary Button Style      -->
    <!-- =============================== -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <!-- =============================== -->
    <!--         Gradient Button Style    -->
    <!-- =============================== -->
    <style name="GradientButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- =============================== -->
    <!--    Bottom Navigation Styles     -->
    <!-- =============================== -->
    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray_50</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <!-- =============================== -->
    <!--    Date & Time Picker Styles    -->
    <!-- =============================== -->
    <style name="DatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorControlActivated">@color/primary_blue</item>
        <item name="android:colorControlActivated">@color/primary_blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorControlActivated">@color/primary_blue</item>
        <item name="android:colorControlActivated">@color/primary_blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <!-- =============================== -->
    <!--      Filter Chip Style          -->
    <!-- =============================== -->
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/filter_chip_text</item>
        <item name="android:textColor">@color/filter_chip_background</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- =============================== -->
    <!--      Category Chip Style        -->
    <!-- =============================== -->
    <style name="CategoryChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Text and Icon Colors - Dark text for pastel backgrounds -->
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="checkedIconVisible">false</item>

        <!-- Chip Border - Dark outline -->
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">#000000</item>

        <!-- Chip Shape -->
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>

        <!-- Chip Padding -->
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <!-- Text Size and Elevation -->
        <item name="android:textSize">13sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- =============================== -->
    <!--      Toolbar Title Style        -->
    <!-- =============================== -->
    <style name="ToolbarTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- =============================== -->
    <!--      Tab Text Style             -->
    <!-- =============================== -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
