<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Dark Theme -->
    <style name="Base.Theme.ConnectMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors for Dark Mode -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorSecondary">@color/mint_400</item>

        <!-- Status and Navigation Bars -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Default Font Family - Pretendard -->
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="fontFamily">@font/pretendard</item>

        <!-- Fix password toggle icons -->
        <item name="passwordToggleDrawable">@drawable/password_toggle</item>
    </style>

    <!-- Splash Screen Theme - Same as light mode for consistency -->
    <style name="Theme.ConnectMate.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>