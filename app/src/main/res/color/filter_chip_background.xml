<?xml version="1.0" encoding="utf-8"?>
<!-- Light mode: Light gray when unchecked, primary blue when checked -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state: Primary blue background for emphasis -->
    <item android:color="@color/primary_blue" android:state_checked="true" />
    <!-- Unchecked state: Light blue background -->
    <item android:color="@color/blue_200" />
</selector>
