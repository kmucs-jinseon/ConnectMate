<?xml version="1.0" encoding="utf-8"?>
<!-- Light mode: Toggle button text colors -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state: White text on blue background -->
    <item android:color="@color/white" android:state_checked="true" />
    <!-- Unchecked state: Primary blue text -->
    <item android:color="@color/primary_blue" />
</selector>
