<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.ConnectMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light & dark theme here -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorSecondary">@color/mint_400</item>
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Default Font Family - Noto Sans KR -->
        <item name="android:fontFamily">@font/noto_sans_kr</item>
        <item name="fontFamily">@font/noto_sans_kr</item>
    </style>

    <!-- Main Application Theme -->
    <style name="Theme.ConnectMate" parent="Base.Theme.ConnectMate" />



    <!-- Splash Screen Theme -->
    <style name="Theme.ConnectMate.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
    </style>


</resources>



